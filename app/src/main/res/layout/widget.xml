<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_layout_widget"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/widget_ok_card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:background="@drawable/background_header_layout_widget"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/widget_btn_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_header_layout_widget"
            android:contentDescription="@string/widget_btn_left"
            android:src="@drawable/ic_arrow_back_white"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/widget_ok_card_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="I'm OK"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/widget_btn_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_header_layout_widget"
            android:contentDescription="@string/widget_btn_right"
            android:src="@drawable/ic_arrow_forward_white"
            android:tint="@color/colorPrimary" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/widget_ok_card_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/widget_ok_card_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/widget_ok_card_message_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/widget_ok_card_create"
        android:layout_below="@+id/widget_ok_card_image"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:maxHeight="100dp"
        android:scrollbars="vertical"
        android:text="@string/widget_error_no_ok_card"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/widget_ok_card_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_ok_card_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:maxHeight="100dp"
        android:scrollbars="vertical"
        android:text="Salut,                                                                                                   Je marche correctement.                                                             Cordialement, I'm OK."

        android:textSize="14sp" />

    <TextView
        android:id="@+id/widget_ok_card_recipient_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_ok_card_message"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="Amis :"

        android:textSize="14sp" />

    <TextView
        android:id="@+id/widget_ok_card_recipient_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/widget_ok_card_position"
        android:layout_below="@+id/widget_ok_card_recipient_list_name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical"
        android:text="- Benjamin MAZOYER                                                                             - Baptiste RIBEIRO DA SILVA                                                                             - Antoine VANDEWEGHE"

        android:textSize="12sp" />

    <!--<ListView-->
    <!--android:id="@+id/widget_ok_card_recipient_list"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_above="@+id/widget_ok_card_position"-->
    <!--android:layout_below="@+id/widget_ok_card_recipient_list_name"-->
    <!--android:layout_marginStart="30dp"-->
    <!--android:layout_marginTop="5dp"-->
    <!--android:layout_marginEnd="30dp"-->
    <!--android:layout_marginBottom="20dp"-->
    <!--android:scrollbars="vertical">-->

    <!--<TextView-->
    <!--android:id="@+id/widget_ok_card_recipient_list_content"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:textSize="12sp" />-->
    <!--</ListView>-->


    <LinearLayout
        android:id="@+id/widget_ok_card_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/widget_ok_card_send"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/widget_ok_card_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_image_border"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/widget_ok_card_gps_image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:contentDescription="@string/logo_GPS"
                android:padding="5dp"
                android:src="@drawable/ic_location_white_large"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/widget_ok_card_gps_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maison"
                android:textAlignment="center"

                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_ok_card_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_image_border"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/widget_ok_card_wifi_image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:contentDescription="@string/logo_WIFI"
                android:padding="5dp"
                android:src="@drawable/ic_wifi_white_large"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/widget_ok_card_wifi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maison"
                android:textAlignment="center"

                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/widget_ok_card_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_button_active_widget"
        android:padding="10dp"
        android:text="@string/create_new_ok_card"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/widget_ok_card_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_button_widget"
        android:padding="10dp"
        android:text="@string/send"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

</RelativeLayout>
