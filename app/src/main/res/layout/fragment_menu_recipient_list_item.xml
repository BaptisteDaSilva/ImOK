<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    card_view:cardCornerRadius="@dimen/margin_small"
    card_view:cardElevation="@dimen/margin_small"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fragment_menu_recipient_list_item_image_list"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/fragment_menu_recipient_list_item_image_list"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/fragment_menu_recipient_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_menu_recipient_list_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_menu_recipient_list_item_image_list"
            android:gravity="center" />

    </RelativeLayout>

</android.support.v7.widget.CardView>