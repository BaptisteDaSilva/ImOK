<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controllers.activities.MenuViewPagerActivity">

    <!-- Add TabLayout to handle tabs -->
    <android.support.design.widget.TabLayout
        android:id="@+id/activity_menu_wiew_pager_tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:tabIconTint="@android:color/white"
        app:tabIndicatorColor="@color/colorAccentDark"
        app:tabTextColor="@android:color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_menu_wiew_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>